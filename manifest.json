{
  "manifest_version": 3,
  "name": "Threads Pro Bot",
  "version": "2.0.0",
  "description": "Professional Threads automation tool with advanced features",
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "scripting",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "*://www.threads.com/*",
    "*://*.threads.com/*",
    "*://threads.net/*",
    "*://*.threads.net/*",
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.threads.com/*",
        "*://*.threads.com/*",
        "*://threads.net/*",
        "*://*.threads.net/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_title": "Threads Pro Bot",
    "default_icon": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "utils.js",
        "popup.html",
        "popup.css",
        "config.js",
        "license.js",
        "lang.js"
      ],
      "matches": [
        "*://www.threads.com/*",
        "*://*.threads.com/*",
        "*://threads.net/*",
        "*://*.threads.net/*"
      ]
    }
  ]
}
